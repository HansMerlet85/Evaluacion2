<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iniSesion"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/jumbo" />

    <TextView
        android:id="@+id/codinit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese el codigo" />

    <TextView
        android:id="@+id/descinit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese la descripcion" />

    <TextView
        android:id="@+id/prizeinit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ingrese el precio" />

    <Button
        android:id="@+id/crearinit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear" />

</LinearLayout>